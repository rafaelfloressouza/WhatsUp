<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rafaelfloressouza.whatsup.DashBoardActivity"
    android:orientation="vertical"
    android:id="@+id/dash_board_drawer_layout">

    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/dashboard_content"/>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dash_board_navigation_view"
        app:menu="@menu/sliding_menu"
        app:headerLayout="@layout/sliding_menu_header"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>
